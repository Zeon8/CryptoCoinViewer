<UserControl x:Class="CryptoCoinViewer.Views.ValueCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <ui:CardControl>
        <ui:CardControl.Header>
            <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </ui:CardControl.Header>
        <TextBlock Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </ui:CardControl>
</UserControl>
