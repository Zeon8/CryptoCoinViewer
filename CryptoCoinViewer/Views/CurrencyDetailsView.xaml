<UserControl x:Class="CryptoCoinViewer.Views.CurrencyDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CryptoCoinViewer.Views"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:viewModels="clr-namespace:CryptoCoinViewer.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="400">
    
    <StackPanel Margin="10">
        
        <StackPanel Orientation="Horizontal">
            <Image Source="https://assets.coincap.io/assets/icons/btc@2x.png" 
                   Width="48" VerticalAlignment="Top" Margin="20"/>
            <TextBlock Text="Bitcoin (BTC)" VerticalAlignment="Center" FontSize="18"/>
        </StackPanel>
        
        <UniformGrid Grid.Row="1" Columns="2" VerticalAlignment="Top">
            <local:ValueCard Text="Price" Value="$0" />
            <local:ValueCard Text="Change" Value="-10%" />
            <local:ValueCard Text="Market cap" Value="$0" />
            <local:ValueCard Text="Volume (24Hr)" Value="$0" />
            <local:ValueCard Text="Supply" Value="0 BTC" />
            <local:ValueCard Text="VWAP" Value="$0" ToolTip="Volume Weighted Average Price"/>
        </UniformGrid>
        <TextBlock Text="Markets" Margin="0,10"/>
        <ui:DataGrid ColumnWidth="*" CanUserResizeColumns="False" CanUserReorderColumns="False">
            <ui:DataGrid.Columns>
                <DataGridTextColumn Header="Exchange"/>
                <DataGridTextColumn Header="Pair"/>
                <DataGridTextColumn Header="Price"/>
                <DataGridTextColumn Header="Volume(24 Hr)"/>
                <DataGridTextColumn Header="Volume %"/>
            </ui:DataGrid.Columns>
        </ui:DataGrid>
    </StackPanel>
   
</UserControl>
